{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "eslint:recommended"
],
  "plugins": ["react"],
  "parser":"babel-eslint",
  "rules": {
    "quotes": [2, "single", "avoid-escape"],
    "no-undef": "error",
    "jsx-quotes": [2, "prefer-single"],
    "no-unused-vars": [2, {"args": "all", "argsIgnorePattern": "^_"}],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-use-before-define": ["error", {"functions": false}]
  }
}
